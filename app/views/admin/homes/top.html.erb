<div class="post_form"></div>

<div class="body">

  <div class="container_top">
    <h2 class="h2">管理者トップ</h2>
    <h3 class="h3">投稿一覧</h3>
    <!--投稿一覧を表示するeach文です-->
    <% @post_items.each do |post_item| %>
      <div class="box">
        <div><span>商品名：<%= post_item.title %></span>　<span><%= link_to post_item.customer.name, customer_path(post_item.customer_id) %></span></div>
        <%= link_to admin_post_item_path(post_item.id) do %>
          <%= attachment_image_tag post_item, :image, :fill, 250, 150 %>
        <% end %>
        <p>衝動ポイント<br><%= (post_item.caption).truncate(29) %></p>
        <p>価格：<%= post_item.price %>円</p>
        <p><%= link_to "衝動リンク", post_item.url %></p>
        <p>
          <%= link_to "#{post_item.post_comments.count} コメント", admin_post_item_path(post_item.id) %>
          <%= post_item.favorites.count %> いいね
        </p>
        <div class="impressions">
          <span>閲覧数：<%=  post_item.impressionist_count %></span>
          <% if admin_signed_in? %>
            <span><%= link_to "削除する", admin_post_item_path(post_item), method: :delete %></span>
          <% end %>
        </div>
        <% @tag_maps.each do |tag_map| %>
          <% if tag_map.post_item_id == post_item.id %>
            <%= link_to tag_map.tag.tag_name, tag_path(tag_map.tag.id) %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="container_side-ranking">
    <%= render 'public/homes/ranking_form' %><!--ランキング一覧(サイドバー)の部分テンプレートです-->
  </div>
</div>