<div class="tag">
  <h3>タグ一覧</h3>
  <% tags = Tag.all %>
  <% tags.each do |tag| %>
    <% if admin_signed_in? %>
      <li><%= link_to tag.tag_name + "(#{tag.post_items.count})", admin_tag_path(tag), class: "tag__list" %></li>
    <% else %>
      <li><%= link_to tag.tag_name + "(#{tag.post_items.count})", tag_path(tag), class: "tag__list" %></li>
    <% end %>
  <% end %>
</div>