<div class="scroll-list jscroll">
  <div class="body">
    <div class= "post_form"><%= render 'public/post_items/post_form', post_item: @post_item %></div><!--投稿フォームの部分テンプレートです-->

    <div class="container_top">
      <h3 class="h3">投稿一覧</h3>

        <!--投稿一覧を表示するeach文です-->
        <% @post_items.each do |post_item| %>
          <div class="box">
            <div><strong><%= post_item.title %></strong><span class="box__customer_name"><%= link_to post_item.customer.name, customer_path(post_item.customer_id), class: "box__link" %></span></div>
            <%= link_to post_item_path(post_item.id) do %>
              <%= attachment_image_tag post_item, :image, :fill, 250, 150 %>
            <% end %>
            <span class="box__shodo_point">衝動ポイント</span><span class="box__shodo_price">￥<%= post_item.price %>円</span><br>
            <span class="box__shodo_caption"><%= (post_item.caption).truncate(29) %></span><br>
            <br>
            <p>
              <%= link_to "#{post_item.post_comments.count} コメント", post_item_path(post_item.id), class: "box__link" %>
              <%= post_item.favorites.count %> いいね
            </p>
            <div class="impressions">
              <span>閲覧数：<%=  post_item.impressionist_count %></span>
              <% if customer_signed_in? %>
                <% if post_item.customer_id == current_customer.id %>
                  <span><%= link_to "削除する", post_item_path(post_item), method: :delete, class: "btn box__btn_delete--red" %></span>
                <% end %>
              <% end %>
            </div>
            <p><%= link_to "衝動リンク", post_item.url, class: "btn box__btn_shodo--orange" %></p>
            <% @tag_maps.each do |tag_map| %>
              <% if tag_map.post_item_id == post_item.id %>
                <%= link_to tag_map.tag.tag_name, tag_path(tag_map.tag.id), class: "btn box__btn_tag--blue" %>
              <% end %>
            <% end %>
          </div>
        <% end %>

    </div>

    <div class="container_side-ranking">
      <%= render 'public/homes/ranking_form' %><!--ランキング一覧(サイドバー)の部分テンプレートです-->
    </div>
  </div>
 <%= paginate @post_items %>
</div>