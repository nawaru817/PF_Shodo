<body>
<div class= "post_form">
  <div class= "customer_info">
    <h3>ユーザー情報</h3>
    <table>
        <thead>
          <tr><th>ユーザーネーム</th><td><%= @customer.name %></td></tr>
          <tr><th>投稿数</th><td><%= @post_items.where(customer_id: @customer_id).count %></td></tr>
          <tr><td colspan="2"><%= link_to "いいね一覧", customer_favorite_path(params[:id]) %></td></tr>
          <% if customer_signed_in? %>
            <% if @customer.id == current_customer.id %>
              <tr><td colspan="2"><%= link_to "情報編集", edit_customer_path(params[:id]) %></td></tr>
            <% end %>
          <% end %>
        </thead>
    </table>
  </div>

  <%= render 'public/post_items/post_form', post_item: @post_item %>
</div>

<div class="container_top">
  <h3 class="h3"><%= @customer.name %>さんの投稿一覧</h3>
  <!--ユーザ投稿一覧を表示するeach文です-->
  <% @post_items.each do |post_item| %>
    <% if post_item.customer_id == @customer_id %>
      <div class="box">
        <div><span>商品名：<%= post_item.title %></span>　<span><%= post_item.customer.name %></span></div>
        <%= link_to post_item_path(post_item.id) do %>
          <%= attachment_image_tag post_item, :image, :fill, 250, 150 %>
        <% end %>
        <p>衝動ポイント：<%= post_item.caption %></p>
        <p>価格：<%= post_item.price %>円</p>
        <p><%= link_to "衝動リンク", post_item.url %></p>
        <p>
          <%= link_to "#{post_item.post_comments.count} コメント", post_item_path(post_item.id) %>
          <%= post_item.favorites.count %> いいね
        </p>
        <div class="impressions">
          <span>閲覧数：<%=  post_item.impressionist_count %></span>
          <% if customer_signed_in? %>
            <% if post_item.customer_id == current_customer.id %>
              <span><%= link_to "削除する", post_item_path(post_item), method: :delete %></span>
            <% end %>
          <% end %>
        </div>
        <% @tag_maps.each do |tag_map| %>
          <% if tag_map.post_item_id == post_item.id %>
            <%= link_to tag_map.tag.tag_name, tag_path(tag_map.tag.id) %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="container_side-ranking">
  <%= render 'public/homes/ranking_form' %><!--ランキング一覧(サイドバー)の部分テンプレートです-->
</div>
</body>